<h2>Edit Events</h2>
{{#simple-form  class="card" onsubmit="saveEvent" startingValues=model as |formValues|}}
  <div class="dropdown-selector">
    {{log model}}
  <label class="region-selector">Region: {{if formValues.region (str-title formValues.region) 'Choose a Region'}}</label>
  {{#mdl-menu class="selector" icon="arrow_drop_down" click=(prevent-default)}}
    {{#mdl-value-item binding=(mut formValues.region) value='ozarks'}}Ozarks{{/mdl-value-item}}
    {{#mdl-value-item binding=(mut formValues.region) value='river-valley'}}River Valley{{/mdl-value-item}}
    {{#mdl-value-item binding=(mut formValues.region) value='central'}}Central{{/mdl-value-item}}
    {{#mdl-value-item binding=(mut formValues.region) value='delta'}}Delta{{/mdl-value-item}}
    {{#mdl-value-item binding=(mut formValues.region) value='ouachitas'}}Ouachitas{{/mdl-value-item}}
    {{#mdl-value-item binding=(mut formValues.region) value='timberlands'}}Timberlands{{/mdl-value-item}}
  {{/mdl-menu}}
</div>
  <div class="dropdown-selector">
    {{log model}}
  <label class="region-selector">Category: {{if formValues.category (str-title formValues.category) 'Choose a Category'}}</label>
  {{#mdl-menu class="selector" icon="arrow_drop_down" click=(prevent-default)}}
    {{#mdl-value-item binding=(mut formValues.category) value='ozarks'}}Arts, Film & Music{{/mdl-value-item}}
    {{#mdl-value-item binding=(mut formValues.category) value='river-valley'}}Farmer's Markets, Food & Drink{{/mdl-value-item}}
    {{#mdl-value-item binding=(mut formValues.category) value='central'}}Festivals & Fairs{{/mdl-value-item}}
    {{#mdl-value-item binding=(mut formValues.category) value='delta'}}Holiday Events{{/mdl-value-item}}
    {{#mdl-value-item binding=(mut formValues.category) value='ouachitas'}}Nature{{/mdl-value-item}}
    {{#mdl-value-item binding=(mut formValues.category) value='timberlands'}}Sporting Events{{/mdl-value-item}}
  {{/mdl-menu}}
</div>
  {{mdl-textfield value=formValues.name name="name" class="edit-form__name" label="Name"}}
  {{mdl-textfield value=formValues.email name="email" class="edit-form__email" label="Email"}}
  {{#pikaday-with-time startValue=startDate binding=formValues.startDate as |date|}}
    <div class="mdl-textfield mdl-js-textfield">
      {{pikaday-input class="mdl-textfield__input" value=date}}
      <label class="mdl-textfield__label" for="sample1">Start Date: {{formValues.startDate}}</label>
    </div>
  {{/pikaday-with-time}}

  {{#pikaday-with-time startValue=endDate binding=formValues.endDate as |date|}}
    <div class="mdl-textfield mdl-js-textfield">
      {{pikaday-input class="mdl-textfield__input" value=date}}
      <label class="mdl-textfield__label" for="sample1">End Date: {{formValues.endDate}}</label>
    </div>
  {{/pikaday-with-time}}
  {{mdl-textfield value=formValues.url name="url" class="edit-form__url" label="Website"}}
  {{mdl-textfield value=formValues.location name="location" class="edit-form__location" label="Location"}}
  {{mdl-textfield value=formValues.description name="description" class="edit-form__description" label="Description"}}
  {{mdl-textfield value=formValues.imageUrl name="imageUrl" class="edit-form__imageUrl" label="Image URL"}}

  {{mdl-switch text='Active' value=formValues.active}}
  {{mdl-switch text='Featured' value=formValues.featured}}

    {{mdl-button class="form-submit" isRaised=true text='Save'}}
    {{mdl-button action="deleteEvent" class="form-submit" isRaised=true text='Delete'}}
{{/simple-form}}
